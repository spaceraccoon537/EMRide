<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileActivity">

    <RelativeLayout
        android:id="@+id/rl_heading"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_05">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:src="@drawable/back_white" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:text="Your Profile"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/iv_logout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/logout_white" />

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/iv_logout"
            android:src="@drawable/edit_white" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_heading"
        android:padding="10dp"
        android:background="#F8EAEA">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sougata Mandal"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/tv_useremail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="t2mandal@gmail.com"
            android:textSize="20dp"
            android:layout_below="@+id/tv_username"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/tv_userphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0000000000"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/tv_useremail"
            android:layout_marginBottom="30dp"/>

        <ImageView
            android:id="@+id/iv_prImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_round"
            android:src="@drawable/person_black" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_options"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="20dp"
        android:weightSum="4"
        android:orientation="vertical"
        android:layout_below="@+id/rl_info">

        <TextView
            android:id="@+id/tv_orders"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="Your Orders"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_round2"
            android:drawableStart="@drawable/bag_black"
            android:drawablePadding="20dp"
            android:drawableEnd="@drawable/arrow_black"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"/>

        <TextView
            android:id="@+id/tv_settings"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:text="Settings"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/shape_round2"
            android:drawableStart="@drawable/settings_black"
            android:drawablePadding="20dp"
            android:drawableEnd="@drawable/arrow_black"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"/>

        <TextView
            android:id="@+id/tv_contacts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:text="Support"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/shape_round2"
            android:drawableStart="@drawable/support_black"
            android:drawablePadding="20dp"
            android:drawableEnd="@drawable/arrow_black"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"/>

        <TextView
            android:id="@+id/tv_privacypolicy"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:text="Privacy Policy"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:background="@drawable/shape_round2"
            android:drawableStart="@drawable/about_black"
            android:drawablePadding="20dp"
            android:drawableEnd="@drawable/arrow_black"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"/>

    </LinearLayout>


</RelativeLayout>