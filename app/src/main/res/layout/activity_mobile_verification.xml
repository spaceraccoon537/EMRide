<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MobileVerificationActivity">

    <RelativeLayout
        android:id="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/shape04">


        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/tv_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="120dp"
            android:layout_marginRight="20dp"
            android:fontFamily="serif"
            android:gravity="center"
            android:text="OTP Verification"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_phoneNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_login"
        android:orientation="horizontal"
        android:layout_margin="5dp">


        <TextView
            android:id="@+id/edt_phone_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/shape2"
            android:drawableStart="@drawable/phone"
            android:fontFamily="sans-serif"
            android:inputType="phone"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text=" +91  "
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_email"
            android:layout_alignBaseline="@+id/edt_phone_code"
            android:layout_alignRight="@+id/edt_phone_code"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape2"
            android:fontFamily="sans-serif"
            android:hint="Phone Number"
            android:inputType="phone"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_phoneNo"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:weightSum="6">



        <EditText
            android:id="@+id/edt_1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_border"
            android:gravity="center"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edt_2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_border"
            android:gravity="center"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edt_3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_border"
            android:gravity="center"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edt_4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_border"
            android:gravity="center"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edt_5"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_border"
            android:gravity="center"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edt_6"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_border"
            android:gravity="center"
            android:textSize="20dp" />

    </LinearLayout>

<!--    <EditText-->
<!--        android:id="@+id/edt_otp"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@+id/rl_login"-->
<!--        android:layout_margin="20dp"-->
<!--        android:hint="Enter otp"-->
<!--        android:textSize="30dp"/>-->

    <Button
        android:id="@+id/btn_generate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape03"
        android:text="Generate"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btn_submitOTP"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@drawable/shape03"
        android:text="Verify"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tv_resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_1"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:text="Resend OTP"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

</RelativeLayout>